<project basedir="." default="build" name="synthverse">
	<description>synthverse</description>
	
	<property file="build.properties" />

	
	<target name="init">
		<mkdir dir="${build.dir}"/>
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

	<target name="build" depends="init">
		<javac destdir="${build.dir}" deprecation="${javac.deprecation}" debug="${javac.debug}" debuglevel="${javac.debuglevel}" optimize="${javac.optimize}" >
			<src>
				<pathelement location="${source.main.java.dir}" />
			</src>
		</javac>
	</target>


</project>